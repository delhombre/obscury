{% extends "base.html.twig" %}
{% block body %}
	<h1 class="title has-text-centered has-text-primary major_mono">Mot de passe oublié ?</h1>
	<p class="has-text-centered content">Demandez à réinitialiser votre mot de passe en renseignant votre mail.</p>
	<div class="columns">
		<div class="column is-half is-offset-one-quarter">
			{% for message in app.flashes('mailNotExist_warning') %}
				<div class="container">
					<div class="container is-fluid">
						<article class="message is-warning">
							<div class="message-body">
								{{message}}
							</div>
						</article>
					</div>
				</div>
			{% endfor %}
			<div class="box has-background-black-bis omega">
				{{form_start(form)}}
				{{form_row(form.email, {'attr':{'placeholder':'Renseigner votre email...'}})}}
				<button class="button is-success" type="submit">Envoyer</button>
				{{form_end(form)}}
			</div>
		</div>
	</div>
{% endblock %}
